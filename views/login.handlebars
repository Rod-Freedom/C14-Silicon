<div id="login-div">
    <h1 id="log-title" class="log-title">Login</h1>
    <div id="login-input" style="display: none;">
        <div class="inputs">
            <input id="log-user" type="text" placeholder="Username">
            <input id="log-pass" type="password" placeholder="Password">
        </div>
        <button id="btn-login" class="btn-log">Continue</button>
    </div>
</div>
<div id="separator"></div>
<div id="signup-div">
    <h1 id="sign-title" class="log-title">Sign up</h1>
    <div id="signup-input" style="display: none;">
        <div class="inputs">
            <input id="sign-user" type="text" placeholder="Username">
            <input id="sign-pass" type="password" placeholder="Password">
        </div>
        <button id="btn-signup" class="btn-log">Continue</button>
    </div>
</div>